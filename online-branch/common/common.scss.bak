// Import Quicksand font from Google Fonts
@import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap');

// Discord Color Palette
$discord-dark: #36393f;
$discord-darker: #2f3136;
$discord-darkest: #202225;
$discord-blurple: #5865f2;
$discord-text: #dcddde;
$discord-text-muted: #8e9297;
$discord-text-link: #00b0f4;
$discord-online: #43b581;
$discord-hover: #3c3f45;

// Apply Quicksand font to chat
.chat-message {
  font-family: 'Quicksand', sans-serif !important;
}

.chat-composer {
  font-family: 'Quicksand', sans-serif !important;

  .chat-composer-input {
    font-family: 'Quicksand', sans-serif !important;
  }
}

// Discord-style chat container - MATCH SIDEBAR COLOR
.chat-container,
.chat-drawer-container,
.full-page-chat {
  background-color: $discord-darker !important;
  font-family: 'Quicksand', sans-serif;

  // Adjust width to accommodate sidebar
  margin-right: var(--sidebar-width, 240px);
  transition: margin-right 0.3s ease;
}

// Discord-style messages
.chat-message-container {
  background-color: transparent !important;
  border: none !important;

  &:hover {
    background-color: $discord-hover !important;
  }
}

.chat-message {
  background-color: transparent !important;
  color: $discord-text !important;
  border-radius: 0 !important;
  padding: 8px 16px !important;
  margin: 0 !important;

  .chat-message-avatar {
    border-radius: 50%;
  }

  .chat-message-info {
    color: $discord-text !important;

    .username {
      color: $discord-text !important;
      font-weight: 600;
      font-family: 'Quicksand', sans-serif;
    }

    .time {
      color: $discord-text-muted;
      font-size: 0.75rem;
      margin-left: 8px;
    }
  }

  .chat-message-text {
    color: $discord-text !important;
    font-family: 'Quicksand', sans-serif;

    a {
      color: $discord-text-link !important;
      text-decoration: none;

      &:hover {

        .chat-channel-row {
          background-color: transparent !important;
          color: $discord-text-muted !important;
          border-radius: 4px;
          margin: 2px 8px;
          padding: 6px 8px !important;
          font-family: 'Quicksand', sans-serif;

          &:hover {
            background-color: $discord-hover !important;
            color: $discord-text !important;
          }

          &.active {
            background-color: $discord-hover !important;
            color: $discord-text !important;
          }

          .chat-channel-unread-indicator {
            background-color: $discord-blurple !important;
          }
        }
      }

      // Online Users Sidebar
      .discord-sidebar {
        position: fixed;
        top: 60px;
        right: 0;
        width: var(--sidebar-width, 240px);
        height: calc(100vh - 60px);
        background-color: $discord-darker;
        border-left: 1px solid $discord-darkest;
        overflow-y: auto;
        z-index: 999;
        font-family: 'Quicksand', sans-serif;

        &::-webkit-scrollbar {
          width: 8px;
        }

        &::-webkit-scrollbar-track {
          background: $discord-darker;
        }

        &::-webkit-scrollbar-thumb {
          background: $discord-darkest;
          border-radius: 4px;

          &:hover {
            background: rgba(0, 0, 0, 0.5);
          }
        }
      }

      .discord-sidebar-header {
        padding: 16px;
        border-bottom: 1px solid $discord-darkest;

        h3 {
          color: $discord-text-muted;
          font-size: 12px;
          font-weight: 600;
          text-transform: uppercase;
          letter-spacing: 0.5px;
          margin: 0;
          font-family: 'Quicksand', sans-serif;

          .online-count {
            color: $discord-text;
          }
        }
      }

      .discord-sidebar-users {
        padding: 8px;
      }

      .discord-user-item {
        display: flex;
        align-items: center;
        padding: 8px;
        margin: 2px 0;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.15s ease;

        &:hover {
          background-color: $discord-hover;
        }

        .user-avatar {
          width: 32px;
          height: 32px;
          border-radius: 50%;
          margin-right: 12px;
          position: relative;

          img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            object-fit: cover;
          }

          .status-indicator {
            position: absolute;
            bottom: -2px;
            right: -2px;
            width: 12px;
            height: 12px;
            background-color: $discord-online;
            border: 3px solid $discord-darker;
            border-radius: 50%;
          }
        }

        .user-info {
          flex: 1;
          min-width: 0;

          .username {
            color: $discord-text;
            font-size: 14px;
            font-weight: 500;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            font-family: 'Quicksand', sans-serif;
          }

          .user-status {
            color: $discord-text-muted;
            font-size: 12px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            font-family: 'Quicksand', sans-serif;
          }
        }
      }

      // Hide sidebar when disabled
      body:not(.enable-online-sidebar) {
        .discord-sidebar {
          display: none;
        }

        .chat-container,
        .chat-drawer-container,
        .full-page-chat {
          margin-right: 0 !important;
        }
      }

      // Responsive adjustments
      @media (max-width: 1200px) {
        .discord-sidebar {
          width: 200px;
        }

        .chat-container,
        .chat-drawer-container,
        .full-page-chat {
          margin-right: 200px;
        }
      }

      // Dark theme for chat headers - MATCH SIDEBAR COLOR
      .chat-channel-header {
        background-color: $discord-darker !important;
        border-bottom: 1px solid $discord-darkest !important;
        color: $discord-text !important;

        .chat-channel-title {
          color: $discord-text !important;
          font-family: 'Quicksand', sans-serif;
          font-weight: 600;

          .channel-name {
            color: $discord-text !important;

            &::before {
              content: "# ";
              color: $discord-text-muted;
            }
          }
        }
      }

      // Style buttons to match Discord
      .btn-primary,
      .chat-composer-button {
        background-color: $discord-blurple !important;
        border-color: $discord-blurple !important;
        color: white !important;
        font-family: 'Quicksand', sans-serif;

        &:hover {
          background-color: darken($discord-blurple, 10%) !important;
          border-color: darken($discord-blurple, 10%) !important;
        }
      }

      // Loading state
      .discord-sidebar-users.loading::after {
        content: "Loading users...";
        display: block;
        padding: 16px;
        text-align: center;
        color: $discord-text-muted;
        font-family: 'Quicksand', sans-serif;
        font-size: 14px;
      }

      // Empty state
      .discord-sidebar-users.empty::after {
        content: "No users online";
        display: block;
        padding: 16px;
        text-align: center;
        color: $discord-text-muted;
        font-family: 'Quicksand', sans-serif;
        font-size: 14px;
      }

      // Discord-style User Card Popup
      // Two-column layout
      .card-layout {
        display: flex;
        gap: 20px;
      }

      // Left section
      .left-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 12px;
        min-width: 120px;

        .user-card-avatar {
          margin-top: -80px !important;
          position: relative !important;
        }

        .user-info {
          text-align: center;

          h2,
          p {
            margin: 0;
          }

          .display-name {
            color: $discord-text;
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 4px;
          }

          .username {
            color: $discord-text-muted;
            font-size: 14px;
            margin-bottom: 8px;
          }

          .title-badge {
            display: inline-block;
            padding: 4px 12px;
            background: $discord-darkest;
            color: $discord-text;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 500;
          }
        }
      }

      // Right section
      .right-section {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 14px;
        min-width: 0;

        .bio {
          font-size: 14px;
          color: $discord-text;
          line-height: 1.5;

          p {
            margin: 0 0 8px 0;

            &:last-child {
              margin-bottom: 0;
            }
          }
        }

        .meta-info {
          display: flex;
          flex-direction: column;
          gap: 6px;
          font-size: 13px;
          color: $discord-text-muted;

          .meta-item a {
            color: $discord-text-link;
            text-decoration: none;

            &:hover {
              text-decoration: underline;
            }
          }
        }

        .stats-grid {
          display: grid;
          grid-template-columns: repeat(3, 1fr);
          gap: 10px;

          .stat-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 10px;
            background: #202225;
            border-radius: 6px;

            .stat-value {
              font-size: 18px;
              font-weight: 700;
              color: $discord-text;
            }

            .stat-label {
              font-size: 11px;
              color: $discord-text-muted;
              margin-top: 4px;
              text-transform: uppercase;
              letter-spacing: 0.5px;
            }
          }
        }

        .badges-section {
          .badges-title {
            font-size: 12px;
            font-weight: 600;
            color: $discord-text-muted;
            margin: 0 0 8px 0;
            text-transform: uppercase;
            letter-spacing: 0.5px;
          }

          .badges-list {
            display: flex;
            gap: 6px;
            flex-wrap: wrap;

            .badge {
              display: flex;
              align-items: center;
              gap: 5px;
              padding: 6px 10px;
              background: $discord-darkest;
              border-radius: 4px;
              font-size: 12px;
              color: $discord-text;
              font-weight: 500;
            }
          }
        }

        .trust-level {
          .trust-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 8px;

            .trust-label {
              font-size: 12px;
              color: $discord-text-muted;
              text-transform: uppercase;
              letter-spacing: 0.5px;
            }

            .trust-value {
              font-size: 13px;
              font-weight: 600;
              color: $discord-text;
            }
          }

          .trust-bar {
            height: 6px;
            background: $discord-darkest;
            border-radius: 3px;
            overflow: hidden;

            .trust-progress {
              height: 100%;
              background: linear-gradient(90deg, $discord-blurple, lighten($discord-blurple, 10%));
              transition: width 0.3s ease;
            }
          }
        }

        .groups {
          display: flex;
          gap: 6px;
          flex-wrap: wrap;

          .group-chip {
            padding: 6px 12px;
            background: $discord-darkest;
            color: $discord-text;
            border-radius: 4px;
            font-size: 12px;
            text-decoration: none;
            transition: background 0.2s;
            font-weight: 500;

            &:hover {
              background: $discord-hover;
            }
          }
        }

        .actions {
          display: flex;
          gap: 8px;

          .btn {
            flex: 1;
            padding: 10px 16px;
            border-radius: 4px;
            text-align: center;
            text-decoration: none;
            font-size: 14px;
            font-weight: 600;
            transition: all 0.15s;
            border: none;
            cursor: pointer;
            font-family: 'Quicksand', sans-serif;
            display: block;

            &.btn-primary {
              background: $discord-blurple;
              color: white;

              &:hover {
                background: darken($discord-blurple, 8%);
              }
            }

            &.btn-secondary {
              background: $discord-darkest;
              color: $discord-text;

              &:hover {
                background: $discord-hover;
              }
            }
          }
        }
      }

      // Loading state
      .user-card-loading {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
        gap: 12px;

        .spinner {
          width: 40px;
          height: 40px;
          border: 3px solid $discord-darkest;
          border-top-color: $discord-blurple;
          border-radius: 50%;
          animation: spin 0.8s linear infinite;
        }

        span {
          color: $discord-text-muted;
          font-size: 14px;
        }
      }

      // Error state
      .user-card-error {
        padding: 40px 20px;
        text-align: center;
        color: #f04747;
        font-size: 14px;
      }
    }

    @keyframes spin {
      to {
        transform: rotate(360deg);
      }

      // Ensure sidebar is visible even when chat is expanded
      .chat-drawer,
      .chat-drawer.is-expanded,
      .chat-drawer-outlet-container,
      .chat-drawer-container {
        margin-right: var(--sidebar-width, 240px) !important;
        width: auto !important;
        right: auto !important;
      }

      // If the drawer is positioned absolutely/fixed to the right
      .chat-drawer {
        right: var(--sidebar-width, 240px) !important;
      }

      // Ensure full page chat also respects it
      .full-page-chat {
        margin-right: var(--sidebar-width, 240px) !important;
      }

      // Discord-style User Card Popup
